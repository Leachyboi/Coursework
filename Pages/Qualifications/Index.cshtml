@page
@model CCFTracker.Pages.Qualifications.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        @*Qualification Name, Parent or Child and Parent are needed filters*@
        Column to Filter:<br />
        <input type="radio" asp-for="ColumnFilter" value="QualName" /> Qualification Name<br />
        <input type="radio" asp-for="ColumnFilter" value="ParOrChi" /> Parent or Child<br />
        <input type="radio" asp-for="ColumnFilter" value="Parent" /> Parent<br />
        Filter Key: <input type="text" asp-for="SortString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Qualification[0].QualName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Qualification[0].PassMark)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Qualification[0].ParOrChi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Qualification[0].Parent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Qualification[0].NumChi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Qualification[0].MinChiPass)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Qualification) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.QualName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PassMark)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParOrChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Parent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinChiPass)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
